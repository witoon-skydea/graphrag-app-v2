# GraphRAG Environment Variables
# Copy this file to .env and edit as needed

# General settings
GRAPHRAG_PERSIST_PATH=./graphrag_data

# Embedding settings
# Options: ollama, openai, anthropic, gemini, openrouter
GRAPHRAG_EMBEDDING_SOURCE=ollama
GRAPHRAG_MODEL_NAME=llama2
# API key for external APIs (required for OpenAI, Anthropic, Gemini, OpenRouter)
GRAPHRAG_API_KEY=

# Knowledge Graph settings
# Options for extraction_method: ollama, openai, anthropic, gemini, rule_based
GRAPHRAG_EXTRACTION_METHOD=ollama
# Options for identification_method: ollama, openai, anthropic, gemini, rule_based, proximity, cooccurrence
GRAPHRAG_IDENTIFICATION_METHOD=ollama
GRAPHRAG_SIMILARITY_THRESHOLD=0.85
GRAPHRAG_CONFIDENCE_THRESHOLD=0.5

# Vector Database settings
GRAPHRAG_WEAVIATE_URL=http://localhost:8080
GRAPHRAG_WEAVIATE_API_KEY=

# Document processing settings
GRAPHRAG_CHUNK_SIZE=1000
GRAPHRAG_CHUNK_OVERLAP=200

# OCR settings
# Format: primary+secondary (e.g., eng+tha for English+Thai)
GRAPHRAG_OCR_LANGUAGE=eng+tha

# Logging settings
# Options: DEBUG, INFO, WARNING, ERROR
GRAPHRAG_LOG_LEVEL=INFO
